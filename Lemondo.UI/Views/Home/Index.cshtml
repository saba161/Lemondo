@model Lemondo.UI.Models.HomeViewModels

@foreach (var pie in Model.Statements)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            @*<img src="@pie.ImageThumbnailUrl" alt="">*@
            <div class="caption">
                <h3 class="pull-right">@pie.Name</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@pie.Id">@pie.Name</a>
                </h3>
                <p>@pie.Description</p>
            </div>
        </div>
    </div>

}